@model IEnumerable<_18_02_2021_University_manager.Models.GroupViewModels>

    <div class="table">
        <h3>You status of the requests: </h3>
        @if (ViewBag.Req == "Accepted")
        {
            <h3>Accepted</h3>
        }
        @if (ViewBag.Req == "Requested")
        {
            <h3>Requested</h3>
        }
        @if (ViewBag.Req == "Rejected")
        {
            <h3>Rejected</h3>
        }


        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Sent Request", "SentRequest", new { name = item.Name }) |
                    </td>
                </tr>
            }

        </table>
    </div>
